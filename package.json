{
  "name": "pocka.me",
  "version": "1.0.0",
  "description": "A profile and portfolio of Shota Fuji (pocka)",
  "repository": "git@github.com:pocka/portfolio.git",
  "author": "pocka <pockawoooh@gmail.com>",
  "private": true,
  "packageManager": "pnpm@6.24.4",
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 ChromeAndroid versions",
    "last 2 Opera versions",
    "last 2 iOS versions",
    "last 2 Safari versions"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "corejs": 3,
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-url": {
        "url": "copy",
        "useHash": true
      },
      "postcss-preset-env": {},
      "cssnano": {}
    }
  },
  "posthtml": {
    "plugins": {
      "posthtml-link-noreferrer": {
        "attr": [
          "noopener"
        ]
      },
      "posthtml-external-link-target-blank": {
        "excludedHosts": []
      },
      "htmlnano": {
        "removeUnusedCss": {
          "tool": "purgeCSS"
        }
      }
    }
  },
  "scripts": {
    "dev": "gulp dev",
    "build": "gulp build",
    "deploy": "s3-deploy './dist/**' --cwd './dist/' --bucket $AWS_BUCKET_NAME --distId $AWS_CF_DIST_ID --invalidate '/*' --gzip --etag --deleteRemoved",
    "clean": "rm -rf dist",
    "test": "exit 0"
  },
  "devDependencies": {
    "@popeindustries/lit-html-server": "^4.0.1",
    "cssnano": "^5.0.15",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-connect": "^5.7.0",
    "gulp-posthtml": "^3.0.5",
    "htmlnano": "^2.0.0",
    "marked": "^4.0.10",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.1",
    "postcss-preset-env": "^7.2.3",
    "postcss-url": "^10.1.3",
    "posthtml-external-link-target-blank": "^1.0.0",
    "posthtml-link-noreferrer": "^1.0.10",
    "prettier": "^2.5.1",
    "purgecss": "^4.1.3",
    "s3-deploy": "^1.4.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "config": {
    "devServer": {
      "port": 8080,
      "host": "localhost"
    }
  }
}
