{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "My portfolio",
  "repository": "git@github.com:pocka/portfolio.git",
  "author": "pocka <pockawoooh@gmail.com>",
  "private": true,
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 ChromeAndroid versions",
    "last 2 Opera versions",
    "last 2 iOS versions",
    "last 2 Safari versions"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": {}
    }
  },
  "scripts": {
    "dev": "webpack-dev-server --mode development",
    "build": "rm -rf dist && NODE_ENV=production webpack --mode production",
    "deploy": "s3-deploy './dist/**' --cwd './dist/' --bucket $AWS_BUCKET_NAME --distId $AWS_CF_DIST_ID --invalidate '/*' --gzip --etag --deleteRemoved",
    "test": "exit 0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "babel-loader": "^8.0.4",
    "core-js": "^2.6.1",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.8",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-webpack-plugin": "^2.4.0",
    "mini-css-extract-plugin": "^0.5.0",
    "postcss": "^7.0.7",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "prerender-loader": "^1.2.0",
    "prettier": "^1.15.3",
    "raw-loader": "^1.0.0",
    "s3-deploy": "^1.2.0",
    "sass": "^1.15.2",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-ext-html-webpack-plugin": "^4.0.1",
    "svgo": "^1.1.1",
    "svgo-loader": "^2.2.0",
    "typescript": "^3.2.4",
    "uglify-template-string-loader": "^1.1.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  }
}
